{
  "config": {
    "modules": {
      "academy": {
        "pool": "App",
        "dir": "Academy",
        "session" : {
          "session_name" : "user",
          "token_name" : "token"
        },
        "cookie" : {
          "cookie_name" : "hash",
          "cookie_expiry" : "6666666"
        },
        "database": {
          "type": "mysql",
          "host": "localhost",
          "name": "phpacademy",
          "user": "root",
          "pass": "root"
        },
        "validation": {
          "password" : {
            "current_password": {
              "required": "true"
            },
            "new_password": {
              "required": "true",
              "min": "6"
            },
            "new_password_confirmation": {
              "required": "true",
              "min" : "6",
              "matches": "new_password"
            }
          },
          "update" : {
            "name" : {
              "required" : "true",
              "min": "2",
              "max": "50"
            }
          },
          "register": {
            "username": {
              "required": "true",
              "min": "2",
              "max": "20",
              "unique": "users"
            },
            "password": {
              "required": "true",
              "min": "6"
            },
            "password_confirmation": {
              "required": "true",
              "matches": "password"
            },
            "name": {
              "required": "true",
              "min": "2",
              "max": "50"
            }
          },
          "login" : {
            "username" : {
              "required" : "true"
            },
            "password" : {
              "required" : true
            }
          }
        }
      }
    }
  }
}