{
    "config": {
        "modules": {
            "incubate": {
                "pool": "Lib",
                "dir": "Incubate",
                "baseUrl" : {
                  "url" : "http://apprentice.dev/incubate/"
                },
                "database": {
                    "type": "mysql",
                    "host": "localhost",
                    "name": "incubate",
                    "user": "root",
                    "pass": "root"
                },
                "validation": {
                    "admin": {
                        "user": {
                            "name": {
                                "required": "true"
                            },
                            "email": {
                                "required": "true",
                                "blueacorn": "@blueacorn.com"
                            },
                            "groups": {
                                "required": "true"
                            }
                        },
                        "lesson" :{
                            "name" : {
                                "required" : "true"
                            },
                            "description" : {
                                "required" : "true"
                            }

                        },
                        "teacher" : {
                            "name": {
                                "required": "true"
                            },
                            "email": {
                                "required": "true",
                                "blueacorn": "@blueacorn.com"
                            },
                            "permission": {

                            }
                        }
                    }
                },
                "events": {
                  "lesson_event_set" : {
                    "set_event_date_time" : {
                      "class" : "incubate/lessonObserver",
                      "method" : "setEventDateTime"
                    },
                    "set_event_suggested_students" : {
                      "class" : "incubate/userObserver",
                      "method" : "setEventStudentEmail"
                    },
                    "set_event_description_tags" :{
                      "class": "incubate/lessonObserver",
                      "method": "setEventDescriptionAndTags"
                    }
                  },
                  "lesson_event_fire" : {
                    "fire_google_calendar_event" :{
                      "class" : "incubate/lessonObserver",
                      "method" : "fireGoogleCalendarEvent"
                    }
                  },
                  "lesson_event_after" : {
                    "set_completed_course_date": {
                      "class": "incubate/userObserver",
                      "method": "setCompletedCourseDateForAllStudentsInList"
                    }
                  },

                  "lesson_create_before" : {
                    "add_new_tags_to_db": {
                      "class": "incubate/tagObserver",
                      "method": "addNewTagsToDb"
                    }
                  },
                  "lesson_create_after": {
                    "set_lesson_id_on_event" : {
                      "class" : "incubate/lessonObserver",
                      "method" : "setLessonIdOnEvent"
                    },
                    "attach_tag_to_lesson": {
                      "class": "incubate/tagObserver",
                      "method": "attachTagsToLesson"
                    }
                  },
                  "lesson_edit_before": {
                    "delete_lesson_tag_map": {
                      "class": "incubate/tagObserver",
                      "method": "deleteLessonTagMap"
                    }
                  },
                  "lesson_delete_after": {
                    "delete_lesson_tag_map": {
                      "class": "incubate/tagObserver",
                      "method": "deleteLessonTagMap"
                    },
                    "delete_lesson_completed_courses": {
                      "class": "incubate/lessonObserver",
                      "method": "deleteLessonCompletedCourseMap"
                    }
                  },
                  "delete_tag_before": {
                    "delete_tagmap_of_lesson": {
                      "class": "incubate/tagObserver",
                      "method": "deleteTagMapOfLessonBasedOnTagId"
                    },
                    "delete_all_user_tags": {
                      "class": "incubate/tagObserver",
                      "method": "deleteAllUserMapTags"
                    }
                  },
                  "unmark_completed_course": {
                    "delete_user_completed_course": {
                      "class": "incubate/userObserver",
                      "method": "deleteUserCompletedCourseMap"
                    }
                  },
                  "mark_completed_course": {
                    "mark_user_completed_course": {
                      "class": "incubate/userObserver",
                      "method": "markUserCompletedCourseMap"
                    }
                  },
                  "user_register_after": {
                    "add_user_group_tag": {
                      "class": "incubate/tagObserver",
                      "method": "setNewUserTag"
                    }
                  },
                  "user_delete_after": {
                    "delete_all_user_tags": {
                      "class": "incubate/tagObserver",
                      "method": "deleteUserTags"
                    },
                    "delete_user_completed_course": {
                      "class": "incubate/userObserver",
                      "method": "deleteAllUserCompletedCourseMap"
                     }
                  },
                  "edit_user_tags": {
                    "delete_all_user_tags": {
                      "class": "incubate/tagObserver",
                      "method": "deleteUserTags"
                    },
                    "add_new_tags_to_db" : {
                      "class": "incubate/tagObserver",
                      "method": "addNewTagsToDb"

                    },
                    "add_new_tags_to_user" : {
                      "class": "incubate/tagObserver",
                      "method": "addTagsToUser"
                    }
                  },
                  "lesson_load_after" : {
                    "set_lesson_tags" : {
                      "class" : "incubate/tagObserver",
                      "method" : "setLessonTagsOnLesson"
                    },
                    "set_suggested_student_ids" : {
                      "class" : "incubate/tagObserver",
                      "method" : "setSuggestedStudentIdsOnLesson"
                    },
                    "set_suggested_student_names" : {
                      "class" : "incubate/userObserver",
                      "method" : "setSuggestedStudentNamesOnLesson"
                    }
                  }
                }
            }
        }
    }
}