{
    "config": {
        "modules": {
            "incubate": {
                "pool": "Lib",
                "dir": "Incubate",
                "baseUrl" : {
                  "url" : "http://apprentice.dev/incubate/"
                },
                "database": {
                    "type": "mysql",
                    "host": "localhost",
                    "name": "incubate",
                    "user": "root",
                    "pass": "root"
                },
                "validation": {
                    "admin": {
                        "user": {
                            "name": {
                                "required": "true"
                            },
                            "email": {
                                "required": "true",
                                "blueacorn": "@blueacorn.com"
                            },
                            "groups": {
                                "required": "true"
                            }
                        },
                        "lesson" :{
                            "name" : {
                                "required" : "true"
                            },
                            "description" : {
                                "required" : "true"
                            }

                        },
                        "teacher" : {
                            "name": {
                                "required": "true"
                            },
                            "email": {
                                "required": "true",
                                "blueacorn": "@blueacorn.com"
                            },
                            "permission": {

                            }
                        }
                    }
                },
                "events": {
                    "lesson_create_after": {
                        "add_new_tags_to_db": {
                        "class": "incubate/TagObserver",
                        "method": "addNewTagsAfterLesson"
                      },
                      "attach_tag_to_lesson": {
                        "class": "incubate/tagObserver",
                        "method": "attachTagsToLesson"
                      }
                    },
                    "lesson_create_before" : {
                      "something" : {
                        "class": "",
                        "method" : ""
                      }
                    }
                }

            }
        }
    }
}