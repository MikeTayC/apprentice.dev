{
    "config": {
        "modules": {
            "incubate": {
                "pool": "Lib",
                "dir": "Incubate",
                "baseUrl" : {
                  "url" : "http://apprentice.dev/incubate/"
                },
                "database": {
                    "type": "mysql",
                    "host": "localhost",
                    "name": "incubate",
                    "user": "root",
                    "pass": "root"
                },
                "validation": {
                    "admin": {
                        "user": {
                            "name": {
                                "required": "true"
                            },
                            "email": {
                                "required": "true",
                                "blueacorn": "@blueacorn.com"
                            },
                            "groups": {
                                "required": "true"
                            }
                        },
                        "lesson" :{
                            "name" : {
                                "required" : "true"
                            },
                            "description" : {
                                "required" : "true"
                            }

                        },
                        "teacher" : {
                            "name": {
                                "required": "true"
                            },
                            "email": {
                                "required": "true",
                                "blueacorn": "@blueacorn.com"
                            },
                            "permission": {

                            }
                        }
                    }
                },
                "events": {
                  /** "cron_hit": {
                  *  "test_cron_hit" : {
                  *    "class" : incubabate/cronObserver,
                  *    "method" : checkIfStudentAccepted
                  *  }
                  * }  **/
                  "lesson_create_after": {
                    "add_new_tags_to_db": {
                      "class": "incubate/tagObserver",
                      "method": "addNewTagsToDb"
                    },
                    "attach_tag_to_lesson": {
                      "class": "incubate/tagObserver",
                      "method": "attachTagsToLesson"
                    }
                  },
                  "lesson_edit_before": {
                    "delete_lesson_tag_map": {
                      "class": "incubate/tagObserver",
                      "method": "deleteLessonTagMap"
                    }
                  },
                  "delete_lesson_after": {
                    "delete_lesson_tag_map": {
                      "class": "incubate/tagObserver",
                      "method": "deleteLessonTagMap"
                    },
                    "delete_lesson_completed_courses": {
                      "class": "incubate/lessonObserver",
                      "method": "deleteLessonCompletedCourseMap"
                    }
                  },
                  "schedule_event_after": {
                    "set_completed_course_date": {
                      "class": "incubate/userObserver",
                      "method": "setCompletedCourseDateForAllStudentsInList"
                    }
                  },
                  "delete_tag_before": {
                    "delete_tagmap_of_lesson": {
                      "class": "incubate/tagObserver",
                      "method": "deleteTagMapOfLessonBasedOnTagId"
                    },
                    "delete_all_user_tags": {
                      "class": "incubate/tagObserver",
                      "method": "deleteALlUserMapTags"
                    }
                  },
                  "unmark_completed_course": {
                    "delete_user_completed_course": {
                      "class": "incubate/userObserver",
                      "method": "deleteUserCompletedCourseMap"
                    }
                  },
                  "mark_completed_course": {
                    "mark_user_completed_course": {
                      "class": "incubate/userObserver",
                      "method": "markUserCompletedCourseMap"
                    }
                  },
                  "user_register_after": {
                    "add_new_user": {
                      "class": "incubate/userObserver",
                      "method": "addNewUserToDatabase"
                    },
                    "add_user_group_tag": {
                      "class": "incubate/tagObserver",
                      "method": "setNewUserTag"
                    }
                  },
                  "delete_user_after": {
                    "delete_all_user_tags": {
                      "class": "incubate/tagObserver",
                      "method": "deleteUserTags"
                    }
                  },
                  "edit_user_tags": {
                    "delete_all_user_tags": {
                      "class": "incubate/tagObserver",
                      "method": "deleteUserTags"
                    },
                    "add_new_tags_to_db" : {
                      "class": "incubate/tagObserver",
                      "method": "addNewTagsToDb"

                    },
                    "add_new_tags_to_user" : {
                      "class": "incubate/tagObserver",
                      "method": "addTagsToUser"
                    }
                  }
                }
            }
        }
    }
}